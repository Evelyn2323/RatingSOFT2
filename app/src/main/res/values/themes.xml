<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RatingSOFT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RatingSOFT" parent="Base.Theme.RatingSOFT" />

    <style name="Boton">
        <item name="colorSecondary">@color/Azul</item>
        <item name="colorTertiary">@color/rojo</item>
    </style>

    <style name="TextoEstilo">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.RatingSOFT." parent="Base.Theme.RatingSOFT" />

    <style name="Theme.RatingSOFT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RatingSOFT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RatingSOFT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
